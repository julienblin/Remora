<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns='http://schemas.microsoft.com/windows/2009/Ribbon'>
  <Application.Commands>

    <Command Name="cmdTabTrace"
             Id="1100"
             LabelTitle="{Resource:cmdTabTrace_LabelTitle}">
    </Command>

    <Command Name="cmdGroupTabTraceDirectoryManagement"
             Id="1110"
             LabelTitle="{Resource:cmdGroupTabTraceDirectoryManagement_LabelTitle}">
    </Command>

    <Command Name="cmdGroupTabTraceDirectoryManagementOpen"
             Id="1111"
             LabelTitle="{Resource:cmdGroupTabTraceDirectoryManagementOpen_LabelTitle}">
    </Command>

    <Command Name="cmdGroupTabTraceDirectoryManagementClose"
             Id="1112"
             LabelTitle="{Resource:cmdGroupTabTraceDirectoryManagementClose_LabelTitle}">
    </Command>

    <Command Name="cmdTabLocalServer"
             Id="1200"
             LabelTitle="{Resource:cmdTabLocalServer_LabelTitle}">
    </Command>

    <Command Name="cmdButtonExit"
				 Id="9001"
				 LabelTitle="{Resource:cmdButtonExit_LabelTitle}">
    </Command>

  </Application.Commands>

  <Application.Views>
    <Ribbon>
      <Ribbon.ApplicationMenu>
				<ApplicationMenu CommandName="cmdApplicationMenu">
					<MenuGroup>
						<Button CommandName='cmdButtonExit' />
					</MenuGroup>
				</ApplicationMenu>
			</Ribbon.ApplicationMenu>

      <Ribbon.Tabs>
        <Tab CommandName="cmdTabTrace" ApplicationModes="0,1,2">

          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <Scale Group="cmdGroupTabTraceDirectoryManagement" Size="Large" />
              </ScalingPolicy.IdealSizes>
            </ScalingPolicy>
          </Tab.ScalingPolicy>
          
          <Group CommandName="cmdGroupTabTraceDirectoryManagement" SizeDefinition="TwoButtons" ApplicationModes="0,2">
            <Button CommandName="cmdGroupTabTraceDirectoryManagementOpen" />
            <Button CommandName="cmdGroupTabTraceDirectoryManagementClose" />
          </Group>
        </Tab>
        <Tab CommandName="cmdTabLocalServer">
        </Tab>
      </Ribbon.Tabs>
    </Ribbon>
  </Application.Views>
</Application>